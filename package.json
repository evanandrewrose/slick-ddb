{
  "name": "slick-ddb",
  "version": "1.0.0",
  "main": "./dist/slick-ddb.cjs",
  "module": "./dist/slick-ddb.mjs",
  "exports": {
    ".": {
      "require": "./dist/slick-ddb.cjs",
      "import": "./dist/slick-ddb.mjs"
    }
  },
  "scripts": {
    "build": "tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "test": "jest --config jest.config.ts",
    "test:coverage": "jest --runInBand --coverage --config jest.config.ts",
    "lint:scripts": "eslint . --ext .ts",
    "format:scripts": "prettier . --write",
    "format": "npm run format:scripts",
    "prepare": "husky install && husky add .husky/pre-commit 'npx lint-staged' && git add .husky/pre-commit"
  },
  "peerDependencies": {
    "aws-sdk": "^2.1099.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "dts-bundle-generator": "^6.5.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.5.4",
    "vite": "^2.8.0"
  }
}
